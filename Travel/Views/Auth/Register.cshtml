@using Travel.ViewModel
@model RegisterViewModel

<!-- Register Start -->
<div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container">
        <div class="booking p-5">
            <div class="row g-5 justify-content-center">
                <div class="col-md-6">
                    <h1 class="text-white mb-4">Register</h1>
                    <form asp-action="Register">
                        <div class="row g-3">
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input type="text" class="form-control bg-transparent" id="fullName" asp-for="FullName" placeholder="Full Name">
                                    <label for="fullName">Full Name</label>
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input type="email" class="form-control bg-transparent" id="email" asp-for="Email" placeholder="Your Email">
                                    <label for="email">Your Email</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input type="password" class="form-control bg-transparent" id="password" asp-for="Password" placeholder="Password">
                                    <label for="password">Password</label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input type="password" class="form-control bg-transparent" id="confirmPassword" asp-for="ConfirmPassword" placeholder="Confirm Password">
                                    <label for="confirmPassword">Confirm Password</label>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-outline-light w-100 py-3" type="submit">Register</button>
                            </div>
                        </div>
                    </form>
                    <!-- Add this section for login redirection -->
                    <div class="mt-3 text-center">
                        <p class="text-white">Already have an account? <a href="@Url.Action("Login", "Auth")" class="text-warning">Login here</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Register End -->
