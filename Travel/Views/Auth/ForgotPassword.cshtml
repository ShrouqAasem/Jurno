@using Travel.ViewModel
@model ForgotPasswordViewModel

<!-- Forgot Password Start -->
<div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container">
        <div class="booking p-5">
            <div class="row g-5 justify-content-center">
                <div class="col-md-6">
                    <h1 class="text-white mb-4">Forgot Password</h1>
                    <form asp-action="ForgotPassword" method="post">
                        <div class="row g-3">
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input type="email" class="form-control bg-transparent" id="email" asp-for="Email" placeholder="Your Email" required>
                                    <label for="email">Your Email</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-outline-light w-100 py-3" type="submit">Send Reset Link</button>
                            </div>
                        </div>
                    </form>

                    <!-- Optional message for reset link -->
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-success mt-3" role="alert">
                            @ViewBag.Message
                        </div>
                    }

                    @if (ViewBag.ResetLink != null)
                    {
                        <div class="alert alert-info mt-3" role="alert">
                            <!-- Display the reset link for debugging/testing purposes (in production, this should only be sent via email) -->
                            Click the link to reset your password: <a href="@ViewBag.ResetLink" class="text-warning">Reset Password</a>
                        </div>
                    }

                    <!-- Back to login link -->
                    <div class="mt-3 text-center">
                        <p class="text-white">
                            <a href="@Url.Action("Login", "Auth")" class="text-warning">Back to Login</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Forgot Password End -->



