@using Travel.ViewModel
@model LoginViewModel


<!-- Login Start -->
<div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container">
        <div class="booking p-5">
            <div class="row g-5 justify-content-center">
                <div class="col-md-6">
                    <h1 class="text-white mb-4">Login</h1>
                    <form asp-action="Login">
                        <div class="row g-3">
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input type="email" class="form-control bg-transparent" id="email" asp-for="Email" placeholder="Your Email">
                                    <label for="email">Your Email</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input type="password" class="form-control bg-transparent" id="password" asp-for="Password" placeholder="Password">
                                    <label for="password">Password</label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="rememberMe" asp-for="RememberMe">
                                    <label class="form-check-label text-white" for="rememberMe">Remember Me</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-outline-light w-100 py-3" type="submit">Login</button>
                            </div>
                        </div>
                    </form>

                    <!-- Add this section for forgot password -->
                    <div class="mt-3 text-center">
                        <p class="text-white">
                            <a href="@Url.Action("ForgotPassword", "Auth")" class="text-warning">Forgot your password?</a>
                        </p>
                        <p class="text-white">
                            Don't have an account? <a href="@Url.Action("Register", "Auth")" class="text-warning">Register here</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Login End -->
