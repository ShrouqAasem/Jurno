@using Travel.ViewModel
@model PasswordManagementViewModel

<!-- Password Management Start -->
<div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container">
        <div class="booking p-5">
            <div class="row g-5 align-items-center">
                <div class="col-md-6 offset-md-3">
                    <h1 class="text-white mb-4">@if (Model.IsReset)
                        {
                            <text>Reset Password</text>
                        }
                        else
                        {
                            <text>Forgot Password</text>
                        }</h1>
                    <form asp-action="PasswordManagement" method="post">
                        @if (Model.IsReset)
                        {
                            <input type="hidden" asp-for="UserId" />
                            <input type="hidden" asp-for="Token" />

                            <div class="form-floating mb-3">
                                <input type="password" class="form-control bg-transparent" id="newPassword" name="NewPassword" placeholder="New Password" required>
                                <label for="newPassword">New Password</label>
                            </div>

                            <div class="form-floating mb-3">
                                <input type="password" class="form-control bg-transparent" id="confirmPassword" name="ConfirmPassword" placeholder="Confirm Password" required>
                                <label for="confirmPassword">Confirm Password</label>
                            </div>

                            <div class="col-12">
                                <button class="btn btn-outline-light w-100 py-3" type="submit">Reset Password</button>
                            </div>
                        }
                        else
                        {
                            <div class="form-floating mb-3">
                                <input type="email" class="form-control bg-transparent" id="email" name="Email" placeholder="Your Email" required>
                                <label for="email">Your Email</label>
                            </div>

                            <div class="col-12">
                                <button class="btn btn-outline-light w-100 py-3" type="submit">Send Password Reset Link</button>
                            </div>
                        }

                    </form>

                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-success mt-3" role="alert">
                            @ViewBag.Message
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                    {
                        <div class="alert alert-danger mt-3" role="alert">
                            @ViewBag.ErrorMessage
                        </div>
                    }

                    <div class="mt-3">
                        <a class="btn btn-outline-light" asp-controller="Auth" asp-action="Login">Back to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Password Management End -->
