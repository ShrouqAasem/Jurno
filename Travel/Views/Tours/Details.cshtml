@model Travel.Models.Tour

@{
    ViewData["Title"] = "Tour Details - " + Model.Name;
}

<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-6">
                <!-- Bootstrap Carousel for Tour Images -->
                <div id="tourCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        @for (int i = 0; i < Model.CarouselImages.Count; i++)
                        {
                            var image = Model.CarouselImages[i];
                            var isActive = i == 0 ? "active" : "";
                            <div class="carousel-item @isActive">
                                <img src="@image" class="d-block w-100" alt="Tour Image @i">
                            </div>
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#tourCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#tourCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <div class="col-lg-6">
                <h1>@Model.Name</h1>
                <p>@Model.Description</p>
                <p><strong>Location:</strong> @Model.Location</p>
                <p><strong>Duration:</strong> @Model.DurationDays days</p>
                <p><strong>Price:</strong> $@Model.Price</p>
                @if (Model.Discount > 0)
                {
                    <p><strong>Discount:</strong> @Model.Discount% OFF</p>
                }

                <a href="#" class="btn btn-primary btn-lg mt-3">Book Now</a>

                <div id="map" style="height: 400px; border-radius: 10px; box-shadow: 0 4px 10px rgba(0,0,0,0.1); margin-top: 20px;"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.js"></script>
    <link href="https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Initialize Mapbox
        mapboxgl.accessToken = 'pk.eyJ1IjoiaGVzaGFtMDAiLCJhIjoiY2xzdzAydDlpMXAweTJyczA2cWpzZ2gzbiJ9.gt9wRCmomeE98hD_9ijSJQ';
        var map = new mapboxgl.Map({
            container: 'map',
            style: 'mapbox://styles/mapbox/satellite-streets-v11',
            center: [@Model.Longitude, @Model.Latitude],
            zoom: 10,
            pitch: 45,
            bearing: -17.6
        });
        map.addControl(new mapboxgl.NavigationControl());

        var el = document.createElement('div');
        el.className = 'custom-marker';
        el.style.backgroundImage = 'url(https://img.icons8.com/ios-filled/50/ffffff/marker.png)';
        el.style.width = '50px';
        el.style.height = '50px';
        el.style.backgroundSize = '100%';
        new mapboxgl.Marker(el)
            .setLngLat([@Model.Longitude, @Model.Latitude])
            .addTo(map);
        new mapboxgl.Popup({ offset: 25 })
            .setLngLat([@Model.Longitude, @Model.Latitude])
            .setHTML("<h5>@Model.Name</h5><p>@Model.Location</p>")
            .addTo(map);
    </script>

    <style>
        .custom-marker {
            background-size: cover;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            cursor: pointer;
        }

        #map {
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
    </style>
}
